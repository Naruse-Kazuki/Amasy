<h1>拠点一覧</h1>

<div>
  <table class="table table-bordered table-condensed user-work">
    <thead>
      <tr>
        <td></td>
        <td></td>
        <td>拠点番号</td>
        <td>拠点名</td>
        <td>拠点種類</td>
      </tr>
    </thead>
    <body>
      <% @base.each do |base| %>
      <tr>
        <td><%= link_to "修正", edit_basis_path(base), class: "btn btn-primary" %></td>
        <td><%= link_to "削除", base, method: :delete,
              data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %></td>
        <td><%= base.id %></td>
        <td><%= base.base_name %></td>
        <td><%= base.base_type %></td>
      </tr>
       <% end %>
    </body>
  </table>
  <%= link_to "拠点情報追加", new_basis_path, method: :get, class: "btn btn-primary btn-lg" %>
</div>