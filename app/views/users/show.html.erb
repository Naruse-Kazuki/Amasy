<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "←︎", user_path(date: @first_day.prev_month), class: "btn btn-default" %>
        <%= l(@first_day, format: :middle) %> 時間管理表
        <%= link_to "→︎", user_path(date: @first_day.next_month), class: "btn btn-default" %>
      </td>
      <td>
        指定勤務開始時間:<%= format_basic_info(@user.designated_work_start_time) %>
        指定勤務終了時間:<%= format_basic_info(@user.designated_work_end_time) %>
      </td>
      <td>基本時間:<%= format_basic_info(@user.basic_time) %></td>
      <td>月初日:<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属:<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名:<%= @user.name %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>月末日:<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>


<div><a data-toggle="modal" data-target="#modal1">所属長承認のお知らせ</a></div>
<div><a data-toggle="modal" data-target="#modal2">勤怠変更申請のお知らせ</a></div>
<div class="mar-bottom"><a data-toggle="modal" data-target="#modal3">残業申請のお知らせ</a></div>

<div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="label1" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h5 class="modal-title" id="label1">【<%= @user.name %>からの一ヶ月分勤怠承認】</h5>
        <table class="table table-bordered table-condensed">
          <thead>
            <tr>
              <td>月</td>
              <td>指示者確認</td>
              <td>変更</td>
              <td>勤怠を確認する</td>
            </tr>
          </thead>
          <body>
            <tr>
              <td><%= l(@first_day, format: :middle) %></td>
              <td></td>
              <td></td>
              <td><%= link_to "確認", class: "btn btn-primary" %></td>
            </tr>
          </body>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">変更を送信する</button>
      </div>
    </div>
  </div>
</div>


<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSV", user_path(format: :csv), class: "btn btn-primary" %>
</div>

<%= link_to "勤怠ログ", attendances_log_user_path, class: "btn btn-primary" %>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
      <% css_class = case $days_of_the_week[day.worked_on.wday]
                     when '土'
                       'text-primary'
                     when '日'
                       'text-danger'
                     end
      %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= l(day.started_at, format: "%H") if day.started_at.present? %></td>
          <td><%= l(day.started_at.floor_to(15.minutes), format: "%M") if day.started_at.present? %></td>
          <td><% if (Date.current == day.worked_on) && day.started_at.nil? %>
                <%= link_to "出社", user_attendance_path(@user, day), method: :patch, class: "btn btn-default btn-block" %>
              <% elsif (Date.current == day.worked_on) && day.started_at.present? && day.finished_at.nil? %>
                <%= link_to "退社", user_attendance_path(@user, day), method: :patch, class: "btn btn-default btn-block" %>
              <% end %>
          </td>
          <td><%= l(day.finished_at, format: "%H") if day.finished_at.present? %></td>
          <td><%= l(day.finished_at.floor_to(15.minutes), format: "%M") if day.finished_at.present? %></td>
          <td></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="6"><%= format_basic_info(@user.basic_time).to_f * @worked_sum %></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="5"></td>
        <td>
          所属長確認<%= %><br>
          <%= form_with(model: @user, url: update_month_user_path, local: true, method: :patch ) do |f| %>
            
            <%= f.select :superior, @superior, {value: '申請中'}, :prompt => true %><br>
            <%= f.submit "申請", class: "btn btn-primary" %>
          <% end %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>