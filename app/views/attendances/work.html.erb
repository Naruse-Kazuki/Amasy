<h1>出勤中社員一覧</h1>

<div>
  <table class="table table-bordered table-condensed user-work">
    <thead>
      <tr>
      <td>社員番号</td>
      <td>名前</td>
      </tr>
    </thead>
    <body>
      <% @user.each do |user| %>
        <% user.attendances.each do |day| %>
          <% if (Date.current == day.worked_on) && day.started_at.present? && day.finished_at.nil? %>
            <tr>
              <td><%= user.employee_number %></td>
              <td><%= user.name %></td>
            </tr>
          <% end %>
          
        <% end %>
     <% end %>
      
    </body>
  </table>
</div>